{
  "manifest_version": 3,
  "name": "Text Selection Translator",
  "description": "Select text on any page and translate it to Chinese.",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://fanyi.youdao.com/*",
    "https://dict.youdao.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
