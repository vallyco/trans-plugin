{
  "manifest_version": 3,
  "name": "Text Translation Plugin",
  "version": "1.0",
  "description": "A Chrome extension that translates selected text",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Translator"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}