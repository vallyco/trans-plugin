{
  "manifest_version": 3,
  "name": "Text Selection Translator",
  "description": "Select text on any page and translate it to Chinese.",
  "version": "1.0.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://fanyi.youdao.com/*",
    "https://dict.youdao.com/*",
    "https://openapi.youdao.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/shared.js",
        "content/theme.js",
        "content/selection.js",
        "content/ui.js",
        "content/main.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
