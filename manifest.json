{
  "manifest_version": 3,
  "name": "Text Translation",
  "version": "1.0.0",
  "description": "Select text on any webpage and translate to Chinese.",
  "permissions": [],
  "host_permissions": [
    "*://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
